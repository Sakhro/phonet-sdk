{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "baseUrl": ".",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true, // Allow default imports from the lib
    "paths": {
      "@*": [
        "src/*"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}