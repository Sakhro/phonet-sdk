{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true, // Allow default imports from the lib
    "paths": {
      "@*": [
        "lib/*"
      ],
    }
  },
  "include": [
    "./lib/**/*"
  ]
}